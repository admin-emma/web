---
const { title = "Administración - EMMA HR" } = Astro.props;
import "../styles/global.css";
---
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  </head>
  <body class="bg-gray-100 text-gray-900 font-sans min-h-screen">
    <!-- Navigation Bar -->
    <nav class="bg-gradient-to-r from-blue-500 to-cyan-800 shadow-lg">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <!-- Logo y título -->
          <div class="flex items-center">
            <h1 class="text-xl font-bold text-white">Panel de Administración</h1>
          </div>
          <!-- Navigation Links -->
          <div class="hidden md:flex items-center space-x-6">
            <a 
              href="/admin/dashboard" 
              class="text-white hover:text-blue-50 px-3 py-2 rounded-md text-sm font-medium transition-all duration-200 hover:-translate-y-0.5"
            >
              <i class="fas fa-chart-line mr-2"></i>Dashboard
            </a>
            <a 
              href="/admin/blogs" 
              class="text-white hover:text-blue-50 px-3 py-2 rounded-md text-sm font-medium transition-all duration-200 hover:-translate-y-0.5"
            >
              <i class="fas fa-blog mr-2"></i>Blogs
            </a>
            <a 
              href="/admin/contacts" 
              class="text-white hover:text-blue-50 px-3 py-2 rounded-md text-sm font-medium transition-all duration-200 hover:-translate-y-0.5"
            >
              <i class="fas fa-envelope mr-2"></i>Contactos
            </a>
            <a 
              href="/admin/job-positions" 
              class="text-white hover:text-blue-50 px-3 py-2 rounded-md text-sm font-medium transition-all duration-200 hover:-translate-y-0.5"
            >
              <i class="fas fa-briefcase mr-2"></i>Posiciones
            </a>
            <a 
              href="/admin/recruitment" 
              class="text-white hover:text-blue-50 px-3 py-2 rounded-md text-sm font-medium transition-all duration-200 hover:-translate-y-0.5"
            >
              <i class="fas fa-users mr-2"></i>Reclutamiento
            </a>
            <a 
              href="/admin/users" 
              class="text-white hover:text-blue-50 px-3 py-2 rounded-md text-sm font-medium transition-all duration-200 hover:-translate-y-0.5"
            >
              <i class="fas fa-user-cog mr-2"></i>Usuarios
            </a>
          </div>
          
          <!-- User Menu -->
          <div class="flex items-center space-x-4">
            <!-- Botón volver al sitio -->
            <a 
              href="/" 
              class="text-white hover:text-blue-100 border border-white border-opacity-30 hover:border-opacity-50 px-3 py-2 rounded-md text-sm font-medium transition-all duration-200"
              title="Volver al sitio principal"
            >
              <i class="fas fa-home mr-2"></i>Sitio Web
            </a>
            
            <!-- Logout button -->
            <button 
              id="logoutBtn" 
              class="bg-red-500 hover:bg-red-600 text-white border border-red-500 hover:border-red-600 px-4 py-2 rounded-md text-sm font-medium transition-all duration-200 hover:shadow-lg"
            >
              <i class="fas fa-sign-out-alt mr-2"></i>Salir
            </button>
          </div>
          
          <!-- Mobile menu button -->
          <div class="md:hidden">
            <button 
              type="button" 
              id="mobile-menu-button"
              class="text-white hover:text-blue-100 focus:outline-none focus:text-blue-100"
            >
              <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
        </div>
      </div>
      
      <!-- Mobile menu -->
      <div class="md:hidden hidden" id="mobile-menu">
        <div class="px-2 pt-2 pb-3 space-y-1 bg-gradient-to-b from-indigo-600 to-purple-700">
          <a href="/admin/dashboard" class="text-white block px-3 py-2 rounded-md text-base font-medium hover:bg-white hover:bg-opacity-10 transition-all duration-200">
            <i class="fas fa-chart-line mr-2"></i>Dashboard
          </a>
          <a href="/admin/blogs" class="text-white block px-3 py-2 rounded-md text-base font-medium hover:bg-white hover:bg-opacity-10 transition-all duration-200">
            <i class="fas fa-blog mr-2"></i>Blogs
          </a>
          <a href="/admin/contacts" class="text-white block px-3 py-2 rounded-md text-base font-medium hover:bg-white hover:bg-opacity-10 transition-all duration-200">
            <i class="fas fa-envelope mr-2"></i>Contactos
          </a>
          <a href="/admin/recruitment" class="text-white block px-3 py-2 rounded-md text-base font-medium hover:bg-white hover:bg-opacity-10 transition-all duration-200">
            <i class="fas fa-users mr-2"></i>Reclutamiento
          </a>
          <a href="/admin/users" class="text-white block px-3 py-2 rounded-md text-base font-medium hover:bg-white hover:bg-opacity-10 transition-all duration-200">
            <i class="fas fa-user-cog mr-2"></i>Usuarios
          </a>
          <div class="border-t border-white border-opacity-20 pt-4">
            <a href="/" class="text-white block px-3 py-2 rounded-md text-base font-medium hover:bg-white hover:bg-opacity-10 transition-all duration-200">
              <i class="fas fa-home mr-2"></i>Sitio Web
            </a>
          </div>
        </div>
      </div>
    </nav>
    
    <!-- Main Content -->
    <main class="flex-1">
      <slot />
    </main>
    
    <!-- Footer para admin -->
    <footer class="bg-white border-t border-gray-200 mt-auto">
      <div class="max-w-7xl mx-auto py-4 px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center">
          <p class="text-sm text-gray-500">
            © 2025 EMMA HR. Panel de Administración.
          </p>
          <div class="flex items-center space-x-4 text-sm text-gray-500">
            <span>v1.0.0</span>
            <span>•</span>
            <span id="current-time"></span>
          </div>
        </div>
      </div>
    </footer>
    
    <script>
      // Mobile menu toggle
      document.getElementById('mobile-menu-button')?.addEventListener('click', () => {
        const mobileMenu = document.getElementById('mobile-menu');
        mobileMenu?.classList.toggle('hidden');
      });
      
      // Logout functionality
      document.getElementById('logoutBtn')?.addEventListener('click', async () => {
        localStorage.removeItem('auth-token');
        window.location.href = '/admin';
      });
      
      // Update current time
      function updateTime() {
        const now = new Date();
        const timeString = now.toLocaleTimeString('es-ES', { 
          hour: '2-digit', 
          minute: '2-digit' 
        });
        const timeElement = document.getElementById('current-time');
        if (timeElement) {
          timeElement.textContent = timeString;
        }
      }
      
      // Update time every minute
      updateTime();
      setInterval(updateTime, 60000);
      
      // Highlight active navigation item
      document.addEventListener('DOMContentLoaded', () => {
        const currentPath = window.location.pathname;
        const navLinks = document.querySelectorAll('nav a[href]');
        
        navLinks.forEach(link => {
          if (link.getAttribute('href') === currentPath) {
            // Remover clases de estado normal
            link.classList.remove('text-white', 'hover:text-blue-50');
            // Agregar clases de estado activo
            link.classList.add('bg-white', 'text-blue-800', 'font-semibold', 'shadow-md', 'hover:text-blue-900', 'hover:bg-blue-50');
          }
        });
      });
    </script>
  </body>
</html>
