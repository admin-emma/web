---
// Componente para mostrar los componentes MDX disponibles
---

<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 mb-4">
  <h3 class="text-lg font-medium text-gray-900 mb-4">
    <i class="fas fa-puzzle-piece text-indigo-600 mr-2"></i>
    Componentes Disponibles
  </h3>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3">
    <!-- FeatureCard -->
    <button
      type="button"
      onclick="insertComponent('FeatureCard')"
      class="component-btn p-3 text-left border border-gray-200 rounded-lg hover:bg-blue-50 hover:border-blue-300 transition-colors"
    >
      <div class="flex items-center mb-2">
        <i class="fas fa-star text-blue-600 mr-2"></i>
        <span class="font-medium text-gray-900">FeatureCard</span>
      </div>
      <p class="text-xs text-gray-600">Tarjeta para destacar características o beneficios</p>
    </button>

    <!-- InfoBox -->
    <button
      type="button"
      onclick="insertComponent('InfoBox')"
      class="component-btn p-3 text-left border border-gray-200 rounded-lg hover:bg-green-50 hover:border-green-300 transition-colors"
    >
      <div class="flex items-center mb-2">
        <i class="fas fa-info-circle text-green-600 mr-2"></i>
        <span class="font-medium text-gray-900">InfoBox</span>
      </div>
      <p class="text-xs text-gray-600">Caja de información importante o tips</p>
    </button>

    <!-- MetricCard -->
    <button
      type="button"
      onclick="insertComponent('MetricCard')"
      class="component-btn p-3 text-left border border-gray-200 rounded-lg hover:bg-purple-50 hover:border-purple-300 transition-colors"
    >
      <div class="flex items-center mb-2">
        <i class="fas fa-chart-bar text-purple-600 mr-2"></i>
        <span class="font-medium text-gray-900">MetricCard</span>
      </div>
      <p class="text-xs text-gray-600">Tarjeta para mostrar métricas o estadísticas</p>
    </button>

    <!-- SectionBox -->
    <button
      type="button"
      onclick="insertComponent('SectionBox')"
      class="component-btn p-3 text-left border border-gray-200 rounded-lg hover:bg-yellow-50 hover:border-yellow-300 transition-colors"
    >
      <div class="flex items-center mb-2">
        <i class="fas fa-box text-yellow-600 mr-2"></i>
        <span class="font-medium text-gray-900">SectionBox</span>
      </div>
      <p class="text-xs text-gray-600">Sección destacada para contenido especial</p>
    </button>

    <!-- TechStack -->
    <button
      type="button"
      onclick="insertComponent('TechStack')"
      class="component-btn p-3 text-left border border-gray-200 rounded-lg hover:bg-red-50 hover:border-red-300 transition-colors"
    >
      <div class="flex items-center mb-2">
        <i class="fas fa-code text-red-600 mr-2"></i>
        <span class="font-medium text-gray-900">TechStack</span>
      </div>
      <p class="text-xs text-gray-600">Lista de tecnologías o herramientas</p>
    </button>

    <!-- ScheduleItem -->
    <button
      type="button"
      onclick="insertComponent('ScheduleItem')"
      class="component-btn p-3 text-left border border-gray-200 rounded-lg hover:bg-indigo-50 hover:border-indigo-300 transition-colors"
    >
      <div class="flex items-center mb-2">
        <i class="fas fa-calendar text-indigo-600 mr-2"></i>
        <span class="font-medium text-gray-900">ScheduleItem</span>
      </div>
      <p class="text-xs text-gray-600">Elemento de agenda o cronograma</p>
    </button>
  </div>

  <!-- Elementos básicos de Markdown -->
  <div class="mt-6 pt-4 border-t border-gray-200">
    <h4 class="text-sm font-medium text-gray-900 mb-3">Elementos Básicos</h4>
    <div class="flex flex-wrap gap-2">
      <button
        type="button"
        onclick="insertMarkdown('heading')"
        class="px-3 py-1 text-xs bg-gray-100 hover:bg-gray-200 text-gray-700 rounded transition-colors"
      >
        # Título
      </button>
      <button
        type="button"
        onclick="insertMarkdown('bold')"
        class="px-3 py-1 text-xs bg-gray-100 hover:bg-gray-200 text-gray-700 rounded transition-colors"
      >
        **Negrita**
      </button>
      <button
        type="button"
        onclick="insertMarkdown('italic')"
        class="px-3 py-1 text-xs bg-gray-100 hover:bg-gray-200 text-gray-700 rounded transition-colors"
      >
        *Cursiva*
      </button>
      <button
        type="button"
        onclick="insertMarkdown('list')"
        class="px-3 py-1 text-xs bg-gray-100 hover:bg-gray-200 text-gray-700 rounded transition-colors"
      >
        • Lista
      </button>
      <button
        type="button"
        onclick="insertMarkdown('quote')"
        class="px-3 py-1 text-xs bg-gray-100 hover:bg-gray-200 text-gray-700 rounded transition-colors"
      >
        > Cita
      </button>
      <button
        type="button"
        onclick="insertMarkdown('code')"
        class="px-3 py-1 text-xs bg-gray-100 hover:bg-gray-200 text-gray-700 rounded transition-colors"
      >
        `Código`
      </button>
      <button
        type="button"
        onclick="insertMarkdown('link')"
        class="px-3 py-1 text-xs bg-gray-100 hover:bg-gray-200 text-gray-700 rounded transition-colors"
      >
        [Enlace]
      </button>
      <button
        type="button"
        onclick="insertMarkdown('image')"
        class="px-3 py-1 text-xs bg-gray-100 hover:bg-gray-200 text-gray-700 rounded transition-colors"
      >
        ![Imagen]
      </button>
    </div>
  </div>
</div>

<script>
// Las funciones se definen en el archivo principal de blogs
</script>
