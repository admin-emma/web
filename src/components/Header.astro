---
import logoEmma from "../assets/logo-emma.png";
---

<header class="sticky top-0 z-50 bg-white/95 backdrop-blur-md border-b border-[#11B4D9]/20 shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-3 group">
          <img src={logoEmma.src} alt="EMMA HR Logo" class="h-10 object-contain drop-shadow-lg" />
        </a>
      </div>

      <nav class="hidden md:flex space-x-8">
        <a href="/" class="text-[#035AA6] hover:text-[#11B4D9] transition-colors font-medium flex items-center">
          <i class="fas fa-home mr-2 text-sm"></i>
          Inicio
        </a>
        <a href="/about" class="text-[#035AA6] hover:text-[#11B4D9] transition-colors font-medium flex items-center">
          <i class="fas fa-users mr-2 text-sm"></i>
          Nosotros
        </a>
        <a href="/contact" class="text-[#035AA6] hover:text-[#11B4D9] transition-colors font-medium flex items-center">
          <i class="fas fa-envelope mr-2 text-sm"></i>
          Contacto
        </a>
        <a href="/blog" class="text-[#035AA6] hover:text-[#11B4D9] transition-colors font-medium flex items-center">
          <i class="fas fa-newspaper mr-2 text-sm"></i>
          Blog
        </a>
      </nav>

      <div class="hidden md:flex items-center space-x-4">
        <a href="https://emmahr.net/" class="text-[#11B4D9] hover:text-[#035AA6] font-medium text-sm flex items-center group">
          <i class="fas fa-eye mr-2 group-hover:scale-110 transition-transform"></i>
          Ver Prototipo
        </a>
        <a href="/contact" class="bg-gradient-to-r from-[#035AA6] to-[#11B4D9] text-white px-6 py-2.5 rounded-xl hover:from-[#07598C] hover:to-[#11B4D9] transition-all font-medium text-sm flex items-center group shadow-lg hover:shadow-xl">
          <i class="fas fa-rocket mr-2 group-hover:scale-110 transition-transform"></i>
          Únete al Beta
        </a>
      </div>

      <div class="md:hidden">
        <button id="openMenu" class="text-[#035AA6] hover:text-[#11B4D9] p-2">
          <i class="fas fa-bars text-xl"></i>
        </button>
      </div>
    </div>
  </div>
</header>

<!-- Mobile Menu -->
<div id="mobileMenu" class="fixed inset-0 bg-white z-50 hidden">
  <div class="flex flex-col h-full">
    <!-- Header del menú móvil -->
    <div class="flex justify-between items-center p-6 border-b border-[#11B4D9]/20">
      <div class="flex items-center space-x-3">
        <div class="w-8 h-8 bg-white rounded-lg flex items-center justify-center shadow-md border border-[#11B4D9]/20">
          <img src={logoEmma.src} alt="EMMA HR Logo" class="w-6 h-6 object-contain" />
        </div>
        <span class="text-lg font-bold text-[#035AA6]">EMMA</span>
      </div>
      <button id="closeMenu" class="p-2 text-[#035AA6] hover:text-[#11B4D9]">
        <i class="fas fa-times text-xl"></i>
      </button>
    </div>

    <!-- Navegación móvil -->
    <div class="flex-1 px-6 py-8 space-y-6">
      <a href="/" class="flex items-center text-lg text-[#035AA6] hover:text-[#11B4D9] transition-colors group">
        <i class="fas fa-home mr-4 text-[#11B4D9] group-hover:scale-110 transition-transform"></i>
        Inicio
      </a>
      <a href="/about" class="flex items-center text-lg text-[#035AA6] hover:text-[#11B4D9] transition-colors group">
        <i class="fas fa-users mr-4 text-[#11B4D9] group-hover:scale-110 transition-transform"></i>
        Nosotros
      </a>
      <a href="/contact" class="flex items-center text-lg text-[#035AA6] hover:text-[#11B4D9] transition-colors group">
        <i class="fas fa-envelope mr-4 text-[#11B4D9] group-hover:scale-110 transition-transform"></i>
        Contacto
      </a>
      <a href="/blog" class="flex items-center text-lg text-[#035AA6] hover:text-[#11B4D9] transition-colors group">
        <i class="fas fa-newspaper mr-4 text-[#11B4D9] group-hover:scale-110 transition-transform"></i>
        Blog
      </a>
      <hr class="border-[#11B4D9]/20" />
      <a href="/demo" class="flex items-center text-lg text-[#035AA6] hover:text-[#11B4D9] transition-colors group">
        <i class="fas fa-eye mr-4 text-[#11B4D9] group-hover:scale-110 transition-transform"></i>
        Ver Prototipo
      </a>
    </div>

    <!-- Footer del menú móvil -->
    <div class="px-6 py-6 border-t border-[#11B4D9]/20 bg-[#11B4D9]/5">
      <a href="/contact" class="w-full bg-gradient-to-r from-[#035AA6] to-[#11B4D9] text-white px-6 py-3 rounded-xl font-medium text-center flex items-center justify-center group hover:from-[#07598C] hover:to-[#11B4D9] transition-all">
        <i class="fas fa-rocket mr-2 group-hover:scale-110 transition-transform"></i>
        Únete al Beta
      </a>
      <div class="mt-4 text-center">
        <span class="text-xs text-[#07598C]">EMMA • Employee Management Monitoring & Administration</span>
      </div>
    </div>
  </div>
</div>

<script is:inline>
  document.getElementById("openMenu")?.addEventListener("click", () => {
    document.getElementById("mobileMenu")?.classList.remove("hidden");
    document.body.style.overflow = "hidden";
  });
  document.getElementById("closeMenu")?.addEventListener("click", () => {
    document.getElementById("mobileMenu")?.classList.add("hidden");
    document.body.style.overflow = "auto";
  });
</script>