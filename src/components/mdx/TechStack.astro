---
export interface Props {
  category: string;
  tools: string;
  highlight?: string;
}

const { category, tools, highlight } = Astro.props;
---

<div class="flex flex-col sm:flex-row gap-3 py-3 border-b border-gray-100 last:border-b-0">
  <div class="sm:w-1/3">
    <h4 class="font-semibold text-gray-700 uppercase tracking-wide text-sm">{category}</h4>
  </div>
  <div class="sm:w-2/3">
    <p class="text-gray-600 text-sm leading-relaxed">
      {highlight && (
        <span class="font-semibold text-gray-800 bg-gray-100 px-2 py-1 text-xs mr-2">
          {highlight}
        </span>
      )}
      <span>{tools}</span>
    </p>
  </div>
</div>
