---
import { getDatabase } from '../lib/database.js';

interface HeroSlide {
  id: number;
  title: string;
  subtitle: string;
  description: string;
  visual_type: 'dashboard' | 'analytics' | 'team' | 'growth' | 'innovation';
  background_image: string;
  is_active: boolean;
  sort_order: number;
}

let slides: HeroSlide[] = [];

try {
  const db = getDatabase();
  slides = db.prepare(`
    SELECT * FROM hero_slides 
    WHERE is_active = 1 
    ORDER BY sort_order ASC, id ASC
    LIMIT 1
  `).all() as HeroSlide[];
} catch (error) {
  console.error('Error loading hero slides:', error);
}

// Slide por defecto si no hay slides en la BD
const defaultSlide: HeroSlide = {
  id: 1,
  title: "Revoluciona tu Gestión de Recursos Humanos",
  subtitle: "Plataforma completa para RRHH en la nube",
  description: "Optimiza procesos de selección, gestiona talento, automatiza nóminas y potencia el desarrollo de tu equipo con nuestra solución integral de recursos humanos alojada en Microsoft Azure.",
  visual_type: "dashboard",
  background_image: "",
  is_active: true,
  sort_order: 1
};

if (slides.length === 0) {
  slides = [defaultSlide];
}

const currentSlide = slides[0]; // Por ahora usamos el primer slide
const hasBackgroundImage = currentSlide.background_image && currentSlide.background_image.trim() !== '';
