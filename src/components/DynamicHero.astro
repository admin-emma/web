    // Animaciones hover mejoradas para las métricas
    const metricCards = document.querySelectorAll('.group');
    metricCards.forEach((card) => {
      if (card instanceof HTMLElement) {
        card.addEventListener('mouseenter', function() {
          if (this instanceof HTMLElement) {
            this.style.transform = 'scale(1.05) translateY(-5px)';
            this.style.boxShadow = '0 25px 50px -12px rgba(0, 0, 0, 0.25)';
          }
        });
        
        card.addEventListener('mouseleave', function() {
          if (this instanceof HTMLElement) {
            this.style.transform = 'scale(1) translateY(0)';
            this.style.boxShadow = '';
          }
        });
      }
    });
  });

  // Función para crear partículas animadas en el fondo
    function createAnimatedParticles() {
    const heroSection = document.querySelector('.hero-section');
    if (!heroSection) return;

    // Crear contenedor de partículas
    const particlesContainer = document.createElement('div');
    particlesContainer.className = 'absolute inset-0 overflow-hidden pointer-events-none';
    particlesContainer.style.zIndex = '1';
    
    // Crear partículas
    for (let i = 0; i < 15; i++) {
      const particle = document.createElement('div');
      particle.className = 'absolute w-2 h-2 bg-[#11B4D9]/20 rounded-full animate-pulse';
      
      // Posición aleatoria
      particle.style.left = Math.random() * 100 + '%';
      particle.style.top = Math.random() * 100 + '%';
      
      // Animación de flotación
      particle.style.animation = `float ${3 + Math.random() * 4}s ease-in-out infinite ${Math.random() * 2}s`;
      
      particlesContainer.appendChild(particle);
    }
    
    heroSection.appendChild(particlesContainer);
  }

 // Agregar keyframes para la animación de flotación
  const style = document.createElement('style');
  style.textContent = `
