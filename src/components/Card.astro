---
export interface Props {
  title: string;
  description: string;
  link?: string;
  linkText?: string;
  icon?: string;
}

const { title, description, link, linkText = "Descubre más →", icon } = Astro.props;
---

<div class="p-6 bg-white rounded-lg shadow hover:shadow-lg transition">
  {icon && (
    <div class="flex justify-center mb-4">
      <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
        <i class={`${icon} text-blue-600 text-xl`}></i>
      </div>
    </div>
  )}
  <h3 class="text-2xl font-semibold mb-2 text-center">{title}</h3>
  <p class="text-gray-600 mb-4 text-center">
    {description}
  </p>
  {link && (
    <div class="text-center">
      <a href={link} class="text-blue-600 font-medium hover:underline">
        {linkText}
      </a>
    </div>
  )}
</div>
