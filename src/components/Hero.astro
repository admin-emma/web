---
// src/components/Hero.astro
interface Props {
  title: string;
  subtitle: string;
  ctaLabel: string;
  ctaLink: string;
  demoLabel?: string;
  demoLink?: string;
}

const { title, subtitle, ctaLabel, ctaLink, demoLabel, demoLink } = Astro.props as Props;
---

<section class="relative overflow-hidden bg-gradient-to-br from-slate-900 via-blue-900 to-cyan-900 text-white min-h-screen flex items-center">
  <!-- Fondo animado con partÃ­culas -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute -top-4 -left-4 w-72 h-72 rounded-full mix-blend-multiply filter blur-xl animate-pulse bg-blue-600/30"></div>
    <div class="absolute -top-4 -right-4 w-72 h-72 rounded-full mix-blend-multiply filter blur-xl animate-pulse bg-cyan-400/30" style="animation-delay: 2s;"></div>
    <div class="absolute -bottom-8 left-20 w-72 h-72 rounded-full mix-blend-multiply filter blur-xl animate-pulse bg-sky-500/30" style="animation-delay: 4s;"></div>
  </div>
  
  <div class="container mx-auto px-6 lg:px-8 relative z-10">
    <div class="lg:flex lg:items-center lg:justify-between">
      <!-- Contenido principal -->
      <div class="lg:w-1/2 space-y-8 text-center lg:text-left">
        <!-- Badge animado -->
        <div class="inline-flex items-center space-x-2 bg-gradient-to-r from-sky-400/80 to-blue-700/80 backdrop-blur-sm px-4 py-2 rounded-full border border-cyan-300/30 hover:shadow-lg hover:shadow-purple-500/25 transition-all duration-300">
          <div class="w-2 h-2 bg-blue-300 rounded-full animate-ping"></div>
          <span class="text-sm font-medium">ðŸš€ En desarrollo activo</span>
        </div>

        <!-- TÃ­tulo principal con gradiente -->
        <h1 class="text-5xl font-black leading-tight">
          <span class="block bg-gradient-to-r from-blue-600 via-sky-400 to-cyan-300 bg-clip-text text-transparent animate-pulse">
            {title}
          </span>
        </h1>

        <!-- SubtÃ­tulo con efecto typewriter -->
        <div class="space-y-2">
          <div class="text-xl font-semibold text-sky-400 tracking-wider animate-bounce">
            Employee Management Monitoring & Administration
          </div>
          <p class="text-2xl text-cyan-300 max-w-2xl font-light leading-relaxed">
            {subtitle}
          </p>
        </div>

        <!-- Botones con efectos -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <a href={ctaLink} 
             class="group relative overflow-hidden px-8 py-4 bg-gradient-to-r from-sky-400 to-cyan-300 text-gray-900 font-bold rounded-xl transition-all duration-300 hover:scale-105 hover:shadow-2xl transform">
            <span class="relative z-10 flex items-center justify-center">
              <i class="fas fa-rocket mr-3 group-hover:translate-x-1 transition-transform"></i>
              {ctaLabel}
            </span>
            <div class="absolute inset-0 bg-gradient-to-r from-blue-600 to-blue-800 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </a>
          
          {demoLabel && demoLink && (
            <a href={demoLink}
               class="group px-8 py-4 bg-blue-600/10 backdrop-blur-sm border-2 border-sky-400/30 text-sky-400 font-semibold rounded-xl hover:bg-blue-600/20 hover:scale-105 transition-all duration-300 flex items-center justify-center">
              <i class="fas fa-play mr-3 text-cyan-300 group-hover:transition-colors"></i>
              {demoLabel}
            </a>
          )}
        </div>

        <!-- Stats animados -->
        <div class="grid grid-cols-3 gap-4 pt-8">
          <div class="text-center transform hover:scale-110 transition-transform duration-300">
            <div class="text-3xl font-bold text-yellow-400 animate-pulse">24/7</div>
            <div class="text-sm text-purple-200">Soporte</div>
          </div>
          <div class="text-center transform hover:scale-110 transition-transform duration-300">
            <div class="text-3xl font-bold text-green-400 animate-pulse">100%</div>
            <div class="text-sm text-purple-200">Seguro</div>
          </div>
          <div class="text-center transform hover:scale-110 transition-transform duration-300">
            <div class="text-3xl font-bold text-pink-400 animate-bounce">âˆž</div>
            <div class="text-sm text-purple-200">Escalable</div>
          </div>
        </div>
      </div>

      <!-- Dashboard interactivo -->
      <div class="hidden lg:block lg:w-1/2 relative mt-12 lg:mt-0">
        <div class="relative mx-auto w-full max-w-2xl">
          <!-- Dashboard principal con animaciones -->
          <div class="group bg-white/10 backdrop-blur-xl rounded-2xl p-8 shadow-2xl border border-white/20 hover:bg-white/15 transition-all duration-500 transform hover:scale-105">
            <!-- Header del dashboard -->
            <div class="flex items-center justify-between mb-8">
              <div class="flex items-center space-x-3">
                <div class="w-10 h-10 bg-gradient-to-r from-yellow-400 to-orange-500 rounded-xl flex items-center justify-center animate-pulse">
                  <i class="fas fa-crown text-white"></i>
                </div>
                <div>
                  <h3 class="text-xl font-bold">EMMA Dashboard</h3>
                  <p class="text-xs text-purple-200">Panel de Control</p>
                </div>
              </div>
              <div class="flex items-center space-x-2">
                <div class="flex space-x-1">
                  <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
                  <div class="w-3 h-3 bg-yellow-400 rounded-full animate-pulse" style="animation-delay: 1s;"></div>
                  <div class="w-3 h-3 bg-red-400 rounded-full animate-pulse" style="animation-delay: 2s;"></div>
                </div>
              </div>
            </div>

            <!-- Grid de mÃ³dulos animados -->
            <div class="grid grid-cols-2 gap-6">
              <div class="group/card text-center p-6 bg-gradient-to-br from-blue-500/30 to-purple-500/30 rounded-xl hover:from-blue-500/50 hover:to-purple-500/50 transition-all duration-300 transform hover:scale-105 hover:rotate-1">
                <i class="fas fa-users text-5xl text-blue-400 mb-4 animate-bounce"></i>
                <h3 class="text-lg font-bold mb-2">Empleados</h3>
                <p class="text-sm text-purple-200">GestiÃ³n integral</p>
                <div class="mt-3 text-2xl font-bold text-yellow-400 animate-pulse">1,247</div>
              </div>
              
              <div class="group/card text-center p-6 bg-gradient-to-br from-green-500/30 to-emerald-500/30 rounded-xl hover:from-green-500/50 hover:to-emerald-500/50 transition-all duration-300 transform hover:scale-105 hover:-rotate-1">
                <i class="fas fa-calculator text-5xl text-green-400 mb-4 animate-bounce" style="animation-delay: 1s;"></i>
                <h3 class="text-lg font-bold mb-2">NÃ³mina</h3>
                <p class="text-sm text-purple-200">Automatizada</p>
                <div class="mt-3 text-2xl font-bold text-yellow-400 animate-pulse">$2.5M</div>
              </div>
              
              <div class="group/card text-center p-6 bg-gradient-to-br from-purple-500/30 to-pink-500/30 rounded-xl hover:from-purple-500/50 hover:to-pink-500/50 transition-all duration-300 transform hover:scale-105 hover:rotate-1">
                <i class="fas fa-chart-bar text-5xl text-purple-400 mb-4 animate-pulse"></i>
                <h3 class="text-lg font-bold mb-2">Analytics</h3>
                <p class="text-sm text-purple-200">Tiempo real</p>
                <div class="mt-3 text-2xl font-bold text-yellow-400 animate-pulse">97%</div>
              </div>
              
              <div class="group/card text-center p-6 bg-gradient-to-br from-orange-500/30 to-red-500/30 rounded-xl hover:from-orange-500/50 hover:to-red-500/50 transition-all duration-300 transform hover:scale-105 hover:-rotate-1">
                <i class="fas fa-graduation-cap text-5xl text-orange-400 mb-4 animate-spin" style="animation-delay: 3s;"></i>
                <h3 class="text-lg font-bold mb-2">Training</h3>
                <p class="text-sm text-purple-200">AI-Powered</p>
                <div class="mt-3 text-2xl font-bold text-yellow-400 animate-pulse">85%</div>
              </div>
            </div>

            <!-- Status bar animado -->
            <div class="mt-8 flex items-center justify-between">
              <div class="flex items-center space-x-3">
                <div class="w-4 h-4 bg-green-400 rounded-full animate-ping"></div>
                <span class="text-sm text-green-300 font-medium">Sistema Operativo</span>
              </div>
              <div class="flex items-center space-x-2">
                <i class="fas fa-shield-alt text-green-400 animate-pulse"></i>
                <span class="text-xs text-purple-200">Seguridad MÃ¡xima</span>
              </div>
            </div>
          </div>

          <!-- Elementos flotantes adicionales -->
          <div class="absolute -top-6 -right-6 w-12 h-12 bg-yellow-400/80 rounded-full flex items-center justify-center animate-spin">
            <i class="fas fa-star text-orange-800"></i>
          </div>
          <div class="absolute -bottom-6 -left-6 w-16 h-16 bg-pink-500/80 rounded-full flex items-center justify-center animate-bounce">
            <i class="fas fa-heart text-white"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

