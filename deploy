#!/bin/bash

# Script de acceso rápido para despliegue de EMMA
# Uso: ./deploy

echo "🚀 Ejecutando despliegue de EMMA..."
echo "📂 Ejecutando: scripts/deployment/deploy.sh"
echo ""

# Verificar que el script existe
if [ ! -f "scripts/deployment/deploy.sh" ]; then
    echo "❌ Error: Script de despliegue no encontrado"
    echo "📁 Estructura esperada:"
    echo "   scripts/deployment/deploy.sh"
    exit 1
fi

# Hacer ejecutable y ejecutar
chmod +x scripts/deployment/deploy.sh
./scripts/deployment/deploy.sh "$@"
