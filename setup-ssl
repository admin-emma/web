#!/bin/bash

# Script de acceso rápido para configurar SSL
# Uso: ./setup-ssl

echo "🔒 Configurando SSL/HTTPS para EMMA..."
echo "📂 Ejecutando: scripts/deployment/setup-ssl.sh"
echo ""

# Verificar que el script existe
if [ ! -f "scripts/deployment/setup-ssl.sh" ]; then
    echo "❌ Error: Script de SSL no encontrado"
    echo "📁 Estructura esperada:"
    echo "   scripts/deployment/setup-ssl.sh"
    exit 1
fi

# Hacer ejecutable y ejecutar
chmod +x scripts/deployment/setup-ssl.sh
./scripts/deployment/setup-ssl.sh "$@"
