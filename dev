#!/bin/bash

# Script de acceso rápido para desarrollo local
# Uso: ./dev [docker|npm]

echo "💻 Iniciando entorno de desarrollo EMMA..."
echo "📂 Ejecutando: scripts/development/dev.sh"
echo ""

# Verificar que el script existe
if [ ! -f "scripts/development/dev.sh" ]; then
    echo "❌ Error: Script de desarrollo no encontrado"
    echo "📁 Estructura esperada:"
    echo "   scripts/development/dev.sh"
    exit 1
fi

# Hacer ejecutable y ejecutar
chmod +x scripts/development/dev.sh
./scripts/development/dev.sh "$@"
